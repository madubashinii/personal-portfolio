{
    "version": 2,
    "builds": [
        {
            "src": "app/package.json",
            "use": "@vercel/static-build"
        },
        {
            "src": "server/api/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/api/$1.js"
        },
        {
            "src": "/(.*)",
            "dest": "app/$1"
        }
    ]
}